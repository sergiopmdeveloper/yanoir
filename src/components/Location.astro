    width="100%"
    height="500"
    referrerpolicy="no-referrer-when-downgrade"></iframe>
</Section>

<script>
  /**
   * Reveal Location component when
   * the section appears on the viewport
   */

  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  const googleMapsLocation = document.getElementById(
    "section google-maps-location"
  );

  gsap.from(googleMapsLocation, {
    opacity: 0,
    y: 50,
    scrollTrigger: {
      trigger: googleMapsLocation,
      start: "top 80%",
    },
  });
</script>
